<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/edit-product/{{product._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" id="name" class="form-control" placeholder="Nombre del producto" 
                        value="{{product.name}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción">{{product.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="startdate" class="lead">Fecha de ingreso</label>
                    <input type="date" name="startdate" class="form-control" id="startdate">
                </div>
                <div class="form-group">
                    <label for="enddate" class="lead">Fecha de expiración</label>
                    <input type="date" name="enddate" class="form-control" id="enddate">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>