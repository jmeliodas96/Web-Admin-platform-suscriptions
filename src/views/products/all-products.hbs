<div class="row">
    {{#each products }}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="lead"> Nombre producto: </p>
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{name}} <a href="/products/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{description}}
                    </p>
                    <p class="lead"> Expira: </p>
                    <p>
                        {{enddate}}
                    </p>
                    <form action="/products/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead"> No hay productos disponibles.!</p>
                <a href="products/add" class="btn btn-success btn-block"> Agregar un producto.</a>
            </div>
        </div>
    {{/each}}
</div>