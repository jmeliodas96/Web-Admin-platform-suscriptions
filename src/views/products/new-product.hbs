<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/new-product" method="POST">
                <div class="form-group">
                    <input type="text" name="name" id="name" class="form-control" placeholder="Nombre del producto" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
                </div>
                <div class="form-group">
                    <label for="startdate">Fecha de ingreso</label>
                    <input type="date" name="startdate" class="form-control" id="startdate">
                </div>
                <div class="form-group">
                    <label for="enddate"> Fecha de expiración</label>
                    <input type="date" name="enddate" class="form-control" id="enddate">
                </div>
                <div class="form-control">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>