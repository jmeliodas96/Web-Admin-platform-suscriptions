<a href="/products/add" class="btn btn-primary btn-lg">Agregar Pedido</a>
<a href="/modules" class="btn btn-primary btn-lg m-2">Regresar</a>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Descripción</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Fecha de creación</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{description}}</td>
      <td>{{quantity}}</td>
      <td>{{date}}</td>
      <td><a href="/modules" class="btn btn-primary">Editar</a></td>
      <td><a href="/modules" class="btn btn-danger">Cancelar</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>