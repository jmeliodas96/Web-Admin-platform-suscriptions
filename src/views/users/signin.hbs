<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h2>INICIO DE SESIÓN</h2>
            </div>
            <img src="/img/logo.png" class="rounded-circle mx-auto display-block m-4 logo" alt="logo">
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <label for="email" class="lead">Nombre de usuario</label>
                        <input type="email" name="email" id="email" placeholder="Username" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password" class="lead">Contraseña</label>
                        <input type="password" name="password" id="password" placeholder="Ingrese contraseña" class="form-control">
                    </div>

                    <div class="form-group">
                        <a href="#">Olvido su contraseña ?</a>
                        <button class="btn btn-primary btn-block" type="submit">
                            Iniciar Sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>